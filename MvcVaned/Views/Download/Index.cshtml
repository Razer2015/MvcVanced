@using MvcVanced;

@{
    ViewBag.Title = "Downloads";
}

<div class="jumbotron">
    <h1>Downloads</h1>
    <p class="lead">The official downloads of YouTube Vanced</p>
    <p>Features in all versions are the same. There is a slight difference in the Non-Root however. Since the package name
    had to be changed, the Google Play Services won't play along. This means that you have to install additional MicroG package, in order to be able to log-in.
    </p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Non-Root Downloads</h2>
        <p>
            Downloads designed to work with any device that doesn't have root or magisk. If you don't know what they are, download this one. <strong>
    Remember
    to download the MicroG package if you want to be able to log-in.
</strong>
        </p>
        <p>@Html.ActionLink("Downloads »", "Index", "APKs", new { type = APKTYPE.NONROOT }, new { @class = "btn btn-default" })</p>
    </div>
    <div class="col-md-4">
        <h2>Root Downloads</h2>
        <p>Downloads designed to work with rooted devices.</p>
        <p>@Html.ActionLink("Downloads »", "Index", "APKs", new { type = APKTYPE.ROOT }, new { @class = "btn btn-default" })</p>
    </div>
    <div class="col-md-4">
        <h2>Magisk Downloads</h2>
        <p>Downloads designed work with Magisk.</p>
        <p>@Html.ActionLink("Downloads »", "Index", "APKs", new { type = APKTYPE.MAGISK }, new { @class = "btn btn-default" })</p>
    </div>
</div>
